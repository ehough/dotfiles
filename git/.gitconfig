[user]
    name  = Eric Hough
    email = eric@tubepress.com

[color]

    # Use colors in Git commands that are capable of colored output when
    # outputting to the terminal. (This is the default setting in Git â‰¥ 1.8.4.)
    ui = auto

[color "branch"]

    current = yellow reverse
    local   = yellow
    remote  = green

[color "diff"]

    meta = yellow bold
    frag = magenta bold # line info
    old  = red # deletions
    new  = green # additions

[color "status"]

    added     = yellow
    changed   = green
    untracked = cyan

[core]
    editor = /usr/bin/vim

[merge]
    renamelimit = 5000

# https://git-scm.com/book/en/v2/Git-Basics-Git-Aliases
# https://haacked.com/archive/2014/07/28/github-flow-aliases/
[alias]

    lg        = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
    unstage   = reset HEAD --
    newbranch = checkout -b
    s         = status
    d         = diff
    pushall   = "!f() {                                           \
      remote_count=\"$(git remote | wc -l | tr -d '[:space:]')\"; \
      if [ \"$remote_count\" != '1' ]; then                       \
        echo 'please supply a remote name';                       \
        exit 1;                                                   \
      fi;                                                         \
      remote=\"$(git remote)\";                                   \
      git push --all \"$remote\" && git push --tags \"$remote\";  \
    }; f"
    release   = "!f() {                                                   \
      if [[ \"$(git rev-parse --abbrev-ref HEAD)\" != 'develop' ]]; then  \
        echo 'can only release starting from develop branch';             \
        exit 1;                                                           \
      fi;                                                                 \
      if [[ -z \"$1\" ]]; then                                            \
        echo 'please supply a tag name';                                  \
        exit 1;                                                           \
      fi;                                                                 \
      git checkout master                                              && \
      git merge --no-ff --no-edit develop                              && \
      git tag \"$1\"                                                   && \
      git checkout develop                                             && \
      git merge --no-ff --no-edit master;                                 \
    }; f"

[credential]
    helper      = !aws codecommit credential-helper $@
    UseHttpPath = true
